packages:
    */*.cabal,
    experimental/*/*.cabal

-- Allow any newer non-upgradable package
allow-newer:
    *:base,
    *:ghc-bignum,
    *:ghc-prim,
    *:ghc-boot,
    *:ghc,
    *:ghci,
    *:integer-gmp,
    *:integer-simple,
    *:template-haskell

-- Allow to build with GHC 9.8+
if impl(ghc >= 9.8)
    allow-newer:
        *:hspec,
        *:deepseq
